{
	"compilerOptions": {
		"target": "ES6",
		"useDefineForClassFields": true,
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext"
		],
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"types": [
			"chrome"
		],
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./src/*"
			],
			// https://zenn.dev/manase/scraps/3fb10da5a4ecc5
			"react": [
				"./node_modules/@types/react"
			]
		},
	},
	"include": [
		"src",
		"src/**/*.json",
		"vite.config.ts",
		"src/manifest.jon",
		"package.json",
		"scripts"
	]
}