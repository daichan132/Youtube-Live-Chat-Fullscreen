{
  "name": "youtube-live-chat-fullscreen",
  "private": true,
  "version": "2.0.25",
  "type": "module",
  "scripts": {
    "dev": "run-s clean && run-p dev:scss vite",
    "vite": "vite",
    "dev:scss": "typed-scss-modules src  --watch",
    "build": "run-s clean && tsc && vite build && run-s firefox-mv2-build && run-s zip",
    "zip": "rm -f dist.zip && zip -r dist.zip dist && rm -f dist-firefox-v2.zip && cd dist-firefox-v2 && zip -r ../dist-firefox-v2.zip . && cd ..",
    "firefox-mv2-build": "node tools/unstable_mv3ToMv2Build.js",
    "clean": "run-p clean:dist && run-p clean:dist-firefox-v2",
    "clean:dist": "rimraf dist",
    "clean:dist-firefox-v2": "rimraf dist-firefox-v2",
    "format": "npx @biomejs/biome format --write ./src/**",
    "lint": "biome check --write ./src/** && run-p lint:type",
    "lint:type": "tsc --noEmit",
    "prepare": "lefthook install"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/modifiers": "^7.0.0",
    "@dnd-kit/sortable": "^8.0.0",
    "classnames": "^2.5.1",
    "i18next": "^23.16.4",
    "i18next-browser-languagedetector": "^8.0.0",
    "immer": "^10.1.1",
    "lodash-es": "^4.17.21",
    "re-resizable": "^6.10.0",
    "react": "18.3.1",
    "react-color": "^2.19.3",
    "react-dom": "18.3.1",
    "react-i18next": "^15.1.0",
    "react-icons": "^5.3.0",
    "react-modal": "^3.16.1",
    "react-select": "^5.8.2",
    "react-transition-group": "^4.4.5",
    "react-use": "^17.5.1",
    "redux-persist-webextension-storage": "^1.0.2",
    "uuid": "^11.0.2",
    "vite-tsconfig-paths": "^5.0.1",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@crxjs/vite-plugin": "^2.0.0-beta.28",
    "@playwright/test": "^1.48.2",
    "@types/chrome": "^0.0.279",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.8.4",
    "@types/react": "^18.3.12",
    "@types/react-color": "^3.0.12",
    "@types/react-dom": "^18.3.1",
    "@types/react-modal": "^3.16.3",
    "@types/react-router-dom": "^5.3.3",
    "@types/react-transition-group": "^4.4.11",
    "@types/redux-persist-webextension-storage": "^1.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/parser": "^8.12.2",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "css-declaration-sorter": "^7.2.0",
    "fs-extra": "^11.2.0",
    "identity-obj-proxy": "^3.0.0",
    "lefthook": "^1.8.2",
    "npm-run-all2": "^7.0.1",
    "postcss": "^8.4.47",
    "rimraf": "^6.0.1",
    "sass": "^1.80.5",
    "typed-scss-modules": "^8.0.1",
    "typescript": "5.6.3",
    "vite": "^5.4.10"
  },
  "packageManager": "yarn@4.5.1",
  "browserslist": [
    "last 2 version",
    "ie >= 11",
    "iOS >= 8.1",
    "Android >= 4.4"
  ]
}
