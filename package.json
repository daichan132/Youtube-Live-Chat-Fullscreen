    "@types/react-router-dom": "5.3.3",
    "@types/react-transition-group": "4.4.12",
    "@types/redux-persist-webextension-storage": "1.0.3",
    "@types/uuid": "10.0.0",
    "@wxt-dev/module-react": "1.1.3",
    "@wxt-dev/unocss": "1.0.0",
    "lefthook": "1.10.10",
