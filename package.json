{
  "name": "youtube-live-chat-fullscreen",
  "private": true,
  "version": "2.1.1",
  "type": "module",
  "scripts": {
    "dev": "run-s clean && vite",
    "build": "run-s clean && tsc && vite build && node scripts/convertToFirefoxCompatibleManifest.js && run-s bundle:chrome bundle:firefox",
    "bundle:chrome": "web-ext build -s dist -a bundle -o -n dist.zip",
    "bundle:firefox": "web-ext build -s dist-firefox -a bundle -o -n dist-firefox.zip",
    "clean": "run-p clean:dist clean:bundle clean:dist-firefox",
    "clean:dist": "rimraf dist",
    "clean:bundle": "rimraf bundle",
    "clean:dist-firefox": "rimraf dist-firefox",
    "format": "npx @biomejs/biome format --write ./src/**",
    "lint": "biome check --write ./src/** && run-p lint:type",
    "lint:type": "tsc --noEmit",
    "prepare": "lefthook install",
    "test:playwright": "playwright test"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "classnames": "^2.5.1",
    "i18next": "^24.0.5",
    "i18next-browser-languagedetector": "^8.0.2",
    "immer": "^10.1.1",
    "lodash-es": "^4.17.21",
    "re-resizable": "^6.10.3",
    "react": "19.0.0",
    "react-color": "^2.19.3",
    "react-dom": "19.0.0",
    "react-i18next": "^15.1.4",
    "react-icons": "^5.4.0",
    "react-modal": "^3.16.1",
    "react-select": "^5.8.3",
    "react-transition-group": "^4.4.5",
    "react-use": "^17.6.0",
    "redux-persist-webextension-storage": "^1.0.2",
    "uuid": "^11.0.3",
    "vite-tsconfig-paths": "^5.1.4",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@crxjs/vite-plugin": "^2.0.0-beta.28",
    "@playwright/test": "^1.49.1",
    "@types/chrome": "^0.0.287",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.10.1",
    "@types/react": "^19.0.1",
    "@types/react-color": "^3.0.12",
    "@types/react-dom": "^19.0.2",
    "@types/react-modal": "^3.16.3",
    "@types/react-router-dom": "^5.3.3",
    "@types/react-transition-group": "^4.4.11",
    "@types/redux-persist-webextension-storage": "^1.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vitejs/plugin-react": "^4.3.4",
    "fs-extra": "^11.2.0",
    "identity-obj-proxy": "^3.0.0",
    "lefthook": "^1.9.0",
    "npm-run-all2": "^7.0.1",
    "rimraf": "^6.0.1",
    "typescript": "5.7.2",
    "vite": "^5.4.11",
    "vite-css-modules": "^1.6.0",
    "web-ext": "^8.3.0"
  },
  "packageManager": "yarn@4.5.3",
  "browserslist": [
    "last 2 version",
    "ie >= 11",
    "iOS >= 8.1",
    "Android >= 4.4"
  ]
}
