    "i18next": "^24.2.2",
    "i18next-browser-languagedetector": "^8.0.2",
    "immer": "^10.1.1",
    "lodash-es": "^4.17.21",
    "re-resizable": "^6.10.3",
    "react": "19.0.0",
    "react-color": "^2.19.3",
    "react-dom": "19.0.0",
    "react-i18next": "^15.4.0",
    "react-icons": "^5.4.0",
    "react-modal": "^3.16.3",
    "react-transition-group": "^4.4.5",
    "react-use": "^17.6.0",
    "redux-persist-webextension-storage": "^1.0.2",
