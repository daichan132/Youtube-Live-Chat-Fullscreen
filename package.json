{
  "name": "browser-extension-react-ts-starter",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "run-s clean && run-p dev:scss vite",
    "vite": "vite",
    "dev:scss": "typed-scss-modules src  --watch",
    "build": "run-s clean && tsc && vite build && run-s firefox-mv2-build && run-s zip",
    "zip": "rm -f dist.zip && zip -r dist.zip dist && rm -f dist-firefox-v2.zip && zip -r dist-firefox-v2.zip dist-firefox-v2",
    "firefox-mv2-build": "node tools/unstable_mv3ToMv2Build.js",
    "clean": "run-p clean:dist && run-p clean:dist-firefox-v2",
    "clean:dist": "rimraf dist",
    "clean:dist-firefox-v2": "rimraf dist-firefox-v2",
    "format": "run-p format:eslint && run-p format:prettier",
    "format:eslint": "run-s \" lint:eslint --fix \"",
    "format:prettier": "run-s \" lint:prettier --write \"",
    "lint": "run-p lint:eslint && run-p lint:prettier && run-p lint:type",
    "lint:eslint": "eslint . --ext .js,.ts,.tsx --max-warnings 0 --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.(json|yml)\" --ignore-path .gitignore --check",
    "lint:type": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/modifiers": "^7.0.0",
    "@dnd-kit/sortable": "^8.0.0",
    "classnames": "^2.5.1",
    "emoji-regex": "^10.3.0",
    "i18next": "^23.7.16",
    "i18next-browser-languagedetector": "^7.2.0",
    "immer": "^10.0.3",
    "lodash-es": "^4.17.21",
    "re-resizable": "^6.9.11",
    "react": "18.2.0",
    "react-color": "^2.19.3",
    "react-dom": "18.2.0",
    "react-i18next": "^14.0.0",
    "react-icons": "^5.0.1",
    "react-modal": "^3.16.1",
    "react-select": "^5.8.0",
    "react-transition-group": "^4.4.5",
    "react-use": "^17.4.3",
    "redux-persist-webextension-storage": "^1.0.2",
    "uuid": "^9.0.1",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.21",
    "@playwright/test": "^1.41.1",
    "@types/chrome": "^0.0.258",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@types/react-color": "^3.0.11",
    "@types/react-dom": "^18.2.18",
    "@types/react-modal": "^3.16.3",
    "@types/react-router-dom": "^5.3.3",
    "@types/react-transition-group": "^4.4.10",
    "@types/redux-persist-webextension-storage": "^1.0.3",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "css-declaration-sorter": "^7.1.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fs-extra": "^11.2.0",
    "identity-obj-proxy": "^3.0.0",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^6.1.1",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "sass": "^1.69.7",
    "simple-git-hooks": "^2.9.0",
    "typed-scss-modules": "^8.0.0",
    "typescript": "5.3.3",
    "vite": "^4.5.1"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged"
  },
  "packageManager": "yarn@4.0.2",
  "browserslist": [
    "last 2 version",
    "ie >= 11",
    "iOS >= 8.1",
    "Android >= 4.4"
  ]
}
